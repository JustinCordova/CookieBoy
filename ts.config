{
  "compilerOptions": {
    "target": "ES2020",          // Output modern JS
    "module": "ESNext",          // Use ES modules
    "moduleResolution": "node",  // Resolve modules like Node
    "outDir": "dist",            // Output compiled JS here
    "rootDir": "src",            // Your TS source files folder
    "strict": true,              // Enable strict type checking
    "esModuleInterop": true,     // Compatibility with CommonJS modules
    "skipLibCheck": true,        // Speed up compilation by skipping lib checks
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
